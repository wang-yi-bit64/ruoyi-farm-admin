{
  "compilerOptions": {
		"composite": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
		"jsx": "preserve",
		"baseUrl": ".",
		"paths": {
      "~/*": ["./*"],
      "@/*": ["./src/*"]
    },
  },
	"include": [
    "src/**/*"
  ],
	"exclude": [
    "node_modules",
		"dist"
  ],
	"files": [
		"src/typing/.env-config.ts"
	],
}
